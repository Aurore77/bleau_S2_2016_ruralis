{% trans_default_domain 'FOSUserBundle' %}

<div class="container center adminmodel erreur">
    <div class="col m10 offset-m1">
        <h1>Se connecter</h1>
        <div class="row">

            {% if error %}
                <div class="center">
                    <p class="center orangetxt">
                        {{ error|trim('.')|trans({}, 'FOSUserBundle') }}
                    </p>
                </div>
            {% endif %}

            <form class="col m4 offset-m4" action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                {% endif %}

                <div class="input-field">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
                </div>

                <div class="input-field">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required"/>
                </div>

                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

                <div class="center">
                    <button class="btn waves-effect waves-light btn-login" type="submit" name="action"
                            value="{{ 'security.login.submit'|trans }}">Se connecter
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>