{% extends 'base.html.twig' %}

{% block body %}
<div class="row adminmodel">
    <div class="col m8 offset-m2">
        <h1>Liste des partenaires</h1>

        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Descriptif</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for partenaire in partenaires %}
                <tr>
                    <td class="nomPart">{{ partenaire.nom }}</td>
                    <td>{{ partenaire.descriptif }}</td>
                    <td><img width="30%" src="{{ asset('/uploads/images/') }}{{ partenaire.image.url }}" alt="{{ partenaire.image.alt }}"></td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('partenaire_show', { 'id': partenaire.id }) }}">Voir</a>
                            </li>
                            <li>
                                <a href="{{ path('partenaire_edit', { 'id': partenaire.id }) }}">Editer</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('partenaire_new') }}">Ajouter un nouveau partenaire</a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}
