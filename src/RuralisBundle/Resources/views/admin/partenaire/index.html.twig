{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des partenaires</h1>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Descriptif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partenaire in partenaires %}
            <tr>
                <td>{{ partenaire.nom }}</td>
                <td>{{ partenaire.descriptif }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('partenaire_show', { 'id': partenaire.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('partenaire_edit', { 'id': partenaire.id }) }}">Editer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('partenaire_new') }}">Ajouter un nouveau partenaire</a>
        </li>
    </ul>
{% endblock %}
